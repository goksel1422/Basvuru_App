
@{
    Layout = null;
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Seminer ve Kurslar</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Eğitim Adı</th>
                    <th>Eğitim Kurumu</th>
                    <th>Eğitmen Adı</th>
                    <th>Eğitmen Soyadı</th>
                    <th>Başlama Tarihi</th>
                    <th>Bitiş Tarihi</th>
                </tr>
            </thead>
            <tbody id="seminerTablo">
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="seminerModal" style="display: none;" aria-hidden="true" data-url='@Url.Action("seminerModal","Modal")'>
</div>
<button type="button" class="btn btn-success" id="seminerModal-lg">Deneyim Ekle</button>
<script>
    $("#seminerModal-lg").on("click", function () {
        var url = $("#seminerModal").data("url");
        $.get(url, function (data) {
            $("#seminerModal").html(data).modal("show");
        });

    });
</script>