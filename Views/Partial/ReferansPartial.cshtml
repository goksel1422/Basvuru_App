@{
    Layout = null;
}
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Referanslar</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Referans Adı</th>
                    <th>Referans Soyadı</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                </tr>
            </thead>
            <tbody id="referansTablo">
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="referansModal" style="display: none;" aria-hidden="true" data-url='@Url.Action("ReferansModal","Modal")'>

</div>
<button type="button" class="btn btn-success" id="refModal-lg">Referans Ekle</button>
<script>
    $("#refModal-lg").on("click", function () {
        var url = $("#referansModal").data("url");
        $.get(url, function (data) {
            $("#referansModal").html(data).modal("show");
        });

    });
</script>
