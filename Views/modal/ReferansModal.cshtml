
@{
    Layout = null;
}



<div class="modal-dialog modal-lg">
    <div class="modal-content bg-light">
        <div class="modal-header">
            <h4 class="modal-title">Referans Ekleyin</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="card-body">
                <div class="form-group">
                    <label for="inputName">Referans Adi</label>
                    <input value="" type="text" id="referansAdi" class="form-control">
                </div>

                <div class="form-group">
                    <label for="inputName">Referans Soyadı</label>
                    <input type="text" id="referanSoyad" class="form-control">
                </div>
                <div class="form-group">
                    <label for="inputName">E-mail</label>
                    <input type="text" id="referansMail" class="form-control">
                </div>     
                <div class="form-group">
                    <label for="inputName">Telefon</label>
                    <input type="text" id="referansTel" class="form-control">
                </div>

            </div>
        </div>
        <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Sil</button>
            <button type="button" class="btn btn-success" data-dismiss="modal" id="referansSave">Kaydet</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
<script>
    $("#referansSave").on("click", function () {
        var veri = {
            "referansAdi": $('#referansAdi').val(),
            "referanSoyad": $('#referanSoyad').val(),
            "referansMail": $('#referansMail').val(),
            "referansTel": $('#referansTel').val(),
        };
        var tr = $("<tr></tr>").addClass("tablo");
        var td1 = $("<td></td>").text(veri.referansAdi).addClass("referansAdi");
        var td2 = $("<td></td>").text(veri.referanSoyad).addClass("referanSoyad");
        var td3 = $("<td></td>").text(veri.referansMail).addClass("referansMail");
        var td4 = $("<td></td>").text(veri.referansTel).addClass("referansTel");
        var tdPer = $("<td></td>").addClass("text-right py-0 align-middle");
        var div = $("<div></div>").addClass("btn-group btn-group-sm");
        var a1 = $("<a></a>").addClass("btn btn-info").on("click", function () {
            var url = $("#referansModal").data("url");
            $.get(url, function (data) {
                $("#referansModal").html(data);
                $("#referansAdi").val(veri.referansAdi);
                $("#referanSoyad").val(veri.referanSoyad);
                $("#referansMail").val(veri.referansMail);
                $("#referansTel").val(veri.referansTel);
                $("#referansModal").modal("show");
            });
            $(this).parents(".tablo").remove();
        });
        var i1 = $("<i></i>").addClass("fas fa-eye");
        var i2 = $("<i></i>").addClass("fas fa-trash");
        tr.append(td1);
        tr.append(td2);
        tr.append(td3);
        tr.append(td4);
        tr.append(tdPer);
        tdPer.append(div);
        div.append(a1);
        a1.append(i1);
        a1.append(i2);
        sayi++;
        $("#referansTablo").append(tr);

    });

</script>
