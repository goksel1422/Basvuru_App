
<div class="modal-dialog modal-lg">
    <div class="modal-content bg-light">
        <div class="modal-header">
            <h4 class="modal-title">Sertifika Ekleyin</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="card-body">
                <div class="form-group">
                    <label for="inputName">Sertifika Adi</label>
                    <input value="" type="text" id="sertifikaAdi" class="form-control">
                </div>

                <div class="form-group">
                    <label for="inputName">Alındığı Kurum</label>
                    <input type="text" id="alindigiKurum" class="form-control">
                </div>
                <div class="form-group">
                    <label for="inputName">Alım Tarihi</label>
                    <input type="date" id="alimTarihi" class="form-control">
                </div>
                <div class="form-group">
                    <label for="inputDescription">Sertifika Döküman Ekle (.Pdf & .Docx)</label>
                    <div class="col-lg-3">
                        <input type="file" name="yuklenecekPdf" />
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Sil</button>
            <button type="button" class="btn btn-success" data-dismiss="modal" id="sertifikaSave">Kaydet</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
