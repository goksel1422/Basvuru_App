@model Basvuru_App.Models.basvurular
@{
    Layout = null;
}

<div class="timeline timeline-inverse">
    <div class="card card-solid card-info">
        <div class="card-header">
            <h6>Diller</h6>
        </div>
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">

                @foreach (var Dil in Model.byabancidil)
                {
                    <div class="col-12 col-sm-6 align-items-stretch">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                                <h3>@Dil.diller.DilAdi</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-12">
                                        <h2 class="lead"><b></b></h2>
                                        <p class="text-muted text-sm"><b class="fa fa-unlock">Dil Düzeyi:</b> @Dil.basari_seviyeleri.BasSeviyesi </p>
                                    </div>
                                    <div class="col-6 text-center">

                                        <img src="" alt="" class=" img-fluid img-circle elevation-3">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">

                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- / -->
            </div>
        </div>
    </div>
</div>