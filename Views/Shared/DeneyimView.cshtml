@model Basvuru_App.Models.basvurular
@{
    ViewBag.Title = "DeneyimView";
}


    <div class="timeline timeline-inverse">
        <!-- timeline time label -->
        <div class="card card-solid card-success">
            <div class="card-header">
                <h6>Deneyimler</h6>
            </div>
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">

                    @foreach (var Deneyim in Model.deneyim)
                    {
                        <div class="col-12 col-sm-6 align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    <h3>@Deneyim.FirmaAdi</h3>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-12">
                                            <h2 class="lead"><b>@Deneyim.iller.Il</b></h2>
                                            <p class="text-muted text-sm"><b class="fa fa-envelope"> İlgili Birimi: </b>@Deneyim.meslekler.isim </p>
                                            <p class="text-muted text-sm"><b class="fa fa-unlock"> İş tanımı: </b>@Deneyim.IsTanimi</p>
                                            <p class="text-muted text-sm"><b class="fa fa-envelope"> Başlama ve Bitiş Tarihleri : </b>@Deneyim.BaslamaTar - @Deneyim.BitisTar </p>
                                        </div>
                                        <div class="col-6 text-center">

                                            <img src="" alt="" class=" img-fluid img-circle elevation-3">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">

                                </div>
                            </div>
                        </div>
                    }
                    <!-- / -->
                </div>
            </div>
        </div>
    </div>


